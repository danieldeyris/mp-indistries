<!--                    <span>Disc 2x.%</span>-->
<!--                </th>-->
<!--            </xpath>-->

            <xpath expr="//span[@t-field='line.discount']" position="after">
                <div t-if="line.discount2">
                    + <span class="text-nowrap" t-field="line.discount2"/>
                </div>
            </xpath>

        </template>
</odoo>
