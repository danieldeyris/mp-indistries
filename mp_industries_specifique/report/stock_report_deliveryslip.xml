<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_document_inherit_sale_stock" inherit_id="delivery.report_delivery_document2">
        <xpath expr="/t/t/t/div/div[2]" position="before">
            <div class="row">
                <div class="col h2 text-center">
                    <span>Bon de livraison</span>
                </div>
            </div>
        </xpath>
        <xpath expr="/t[1]/t[1]/t[1]/div[1]/div[3]/div[1]/div[2]/div[1]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="/t[1]/t[1]/t[1]/div[1]/div[3]/div[1]/div[2]/span[1]/strong[1]" position="attributes">
            <attribute name="t-if">False</attribute>
        </xpath>
        <xpath expr="/t/t/t/div/div[3]/div[2]/div[3]/span/strong" position="replace">
            <strong>Adresse Livraison:</strong>
        </xpath>
        <xpath expr="/t/t/t/div/div[4]/div[1]/t[2]/strong" position="replace">
            <strong>Commande:</strong>
        </xpath>
        <xpath expr="/t/t/t/div/div[4]/div[4]/strong" position="replace">
            <strong>Poids Net:</strong>
        </xpath>

        <xpath expr="//div[@name='div_outgoing_address']" position="inside">
             <div class="row" t-if="o.picking_comment">
                <div>
                    <span>
                        <strong>Reference :</strong>
                    </span>
                </div>
                <div>
                    <span t-field="o.picking_comment"/>
                </div>
            </div>
        </xpath>

    </template>
</odoo>
